<div class="show-picture">
  <h1 class="show-title"><%= @list.name %></h1>
</div>
<div class="show-content">
  <div class="navbar transparent navbar-inverse navbar-fixed-top">
    <h3><%= link_to 'Create a bookmark', new_bookmark_path(@list.id), class: "btn btn-success" %></h3>
  </div>
  <div class="bookmarks">
      <% @bookmarks.each do |bookmark| %>
        <div class="card">
          <img class="card-img-top" src=<%="https://image.tmdb.org/t/p/w500/#{ bookmark.movie.poster_url}"%>>
          <div class="card-body">
            <h5 class="movie-title"><%= bookmark.movie.title %> <span class="dot"></span> <%= bookmark.movie.rating %> <i class="star fas fa-star"></i></h5>
            <p class="bookmark-overview"><%= bookmark.movie.overview %></p>
          </div>
          <nav class="navbar fixed-bottom navbar-light bg-light">
            <p class="movie-info">Comment: <%= bookmark.comment %></p>
            <% link_to '<i class="fas fa-trash"></i>'.html_safe, bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this list'} %>
          </nav>
        </div>
      <% end %>
  </div>
</div>
